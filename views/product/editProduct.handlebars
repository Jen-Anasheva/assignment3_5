 <section class="formspace">
    <form method="POST" action="/products/update/{{_id}}?method=PUT" enctype="multipart/form-data">
        <span class="formheading">Edit a product</span><br><br>

        <label for="name">Product Name</label> <br>
        <input type="text" id = "name" name = "name" value="{{name}}"> <br>
        <div class="error">{{errors.[0]}}</div> <br>

        <label for="price">Price</label> <br>
        <input type="text" id = "price" name = "price" value="{{price}}"> <br>
        <div class="error">{{errors.[1]}}</div> <br>
        
        <label for="description">Description</label> <br>
        <input type="text" id = "description" name = "description" value="{{description}}"> <br>
        <div class="error">{{errors.[2]}}</div> <br>

        <label for="category">Category</label> <br>
        <input type="text" id = "category" name = "category" value="{{category}}"> <br> <br>
        <div class="error">{{errors.[3]}}</div>

        <label for="quantity">Quantity</label> <br>
        <input type="text" id = "quantity" name = "quantity" value="{{quantity}}"> <br> <br>
        <div class="error">{{errors.[4]}}</div>

        <input type="checkbox" id="bestseller" name="bestseller" value="{{bestseller}}">
        <label for="bestseller">Bestseller</label><br> <br>

        <label>File Upload</label> 
        <input type="file" name="productImg" id="productImg" value="{{productImg}}"> <br><br>

        <input type="submit" value="Update Task">
    </form>
 </section>


