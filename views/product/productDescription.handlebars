<section class="productsdescription">
    <img src="/img/{{productImg}}" alt="{{name}}">
    <div class = "rightcolumn">
        <h2>{{name}}</h2> <br>
        Price: <span class="price">{{price}}</span> <br>
        {{description}} <br>
        <form action="/products/addToCart" method="POST">
            <input type="hidden" name="_id" value={{_id}}>
            <input type="hidden" name="name" value="{{name}}">
            <input type="hidden" name="price" value="{{price}}">
            <label for="quantity">Quantity</label> <br>
            <input type="number" name="quantity" min='1' max='{{quantity}}' value="1"> <br>

            <input type="submit" value="Add to cart">
        </form>
    </div>
</section>